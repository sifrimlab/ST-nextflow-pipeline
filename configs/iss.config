params {
        // User data:
        reference = "/path/to/reference/image" 
        codebook = "/path/to/codebook.csv"
        round_prefix = "Round*"
        channel_prefix="c*"
        extension = "tif"

        nr_rounds=5
        nr_channels=4
        ////////////
        // Pipeline parameters
        ///////////
        
        // Normalization
        clip_percentile = 80

        // White tophat filter:
        filter_radius=15

        // Spot detection:
        min_sigma = 1
        max_sigma = 10
}